<Window x:Class="GitBackupKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitBackupKeeper"
        mc:Ignorable="d"
        Title="Git Backuper" Height="350" Width="525">
    <StackPanel>
        <Button Command="{Binding showSettings}">Settings</Button>
        <Button Command="{Binding addRepository}" Foreground="Green">+</Button>
        <Button Command="{Binding downloadAllRepositories}">Download all</Button>
        <ListView HorizontalContentAlignment="Stretch"  Grid.IsSharedSizeScope="True" Margin="3" ItemsSource="{Binding repositories}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:GitRepositoryView />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
